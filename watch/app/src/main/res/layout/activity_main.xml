<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="137dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="@color/cyan"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <EditText
        android:id="@+id/ip1"
        app:key="ipP1"
        app:title="ipP1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:autofillHints="255"
        android:hint="@string/_255"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dot1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentIP"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/dot1"
        android:layout_width="4dp"
        android:layout_height="23dp"
        android:text="@string/dot"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/setIP"
        app:layout_constraintEnd_toStartOf="@+id/ip2"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/ip2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:autofillHints="255"
        android:hint="@string/_255"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dot2"
        app:layout_constraintTop_toBottomOf="@+id/currentIP"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/dot2"
        android:layout_width="4dp"
        android:layout_height="23dp"
        android:text="@string/dot"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/setIP"
        app:layout_constraintEnd_toStartOf="@+id/ip3"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/ip3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:autofillHints="255"
        android:hint="@string/_255"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dot3"
        app:layout_constraintTop_toBottomOf="@+id/currentIP"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/dot3"
        android:layout_width="4dp"
        android:layout_height="23dp"
        android:text="@string/dot"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/ip4"
        app:layout_constraintBottom_toTopOf="@+id/setIP"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/ip4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="255"
        android:hint="@string/_255"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentIP"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/current"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:text="@string/current"
        android:textSize="12sp"
        android:textColor="@color/cyan"
        app:layout_constraintEnd_toStartOf="@id/currentIP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showIP"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/currentIP"
        android:layout_width="110dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:text="@string/currentIP"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showIP"
        android:visibility="visible"/>

    <Button
        android:id="@+id/setIP"
        android:layout_width="65dp"
        android:layout_height="34dp"
        android:text="@string/connection"
        android:textColor="@color/cyan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ip2"
        tools:ignore="SmallSp"
        android:visibility="visible" />

    <Button
        android:id="@+id/showIP"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:text="@string/hide"
        android:textColor="@color/cyan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>
